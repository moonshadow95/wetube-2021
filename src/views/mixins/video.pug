mixin video(video)
  a(href=`/videos/${video.id}`).video-mixin
    div.video-mixin__thumb(style=`background-image:url(${video.thumbnailUrl});background-size:cover;background-position:center;`)
    div.video-mixin__data
      span.video-mixin__title=video.title
      div.video-mixin__meta
        span #{video.owner.username} â€¢ 
        if video.meta.views<=1 
          span #{video.meta.views} view
        else
          span #{video.meta.views} views