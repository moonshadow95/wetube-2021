extends base

block content 
  if(errorMessage)
    span=errorMessage
  form(method="POST")
    input(name="email" type="email" placeholder="E-mail" value=loggedInUser.email)
    input(name="username" type="text" placeholder="User Name" value=loggedInUser.username)
    input(name="name" type="text" placeholder="Name" value=loggedInUser.name)
    input(name="location" type="text" placeholder="Location" value=loggedInUser.location)
    input(type="submit" value="Update Profile")